<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Karpilenko Roman" id="Create-table-translation-keys">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="translation_keys"/>
            </not>
        </preConditions>
        <createTable tableName="translation_keys">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="translation_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="translation_keys"
                columnNames="translation_key"
                constraintName="uq_translation_keys"/>
    </changeSet>

    <changeSet author="Karpilenko Roman" id="Create-table-translations">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="translations"/>
            </not>
        </preConditions>
        <createTable tableName="translations">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="translation_key_id" type="bigint">
                <constraints foreignKeyName="translations_translation_keys_id_fk"
                             references="translation_keys(id)"/>
            </column>
            <column name="language_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)"/>
        </createTable>

        <addUniqueConstraint
                tableName="translations"
                columnNames="translation_key_id, language_code"
                constraintName="uq_translations_key_lang"/>
    </changeSet>

    <changeSet author="Karpilenko Roman" id="Create-table-cities">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cities"/>
            </not>
        </preConditions>

        <createTable tableName="cities">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="population" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name_translation_key_id" type="bigint">
                <constraints foreignKeyName="cities_translation_keys_id_fk"
                             references="translation_keys(id)"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="cities"
                columnNames="code"
                constraintName="uq_cities_code"/>

    </changeSet>

</databaseChangeLog>